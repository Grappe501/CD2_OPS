# ==========================================================
# CD2_OPS - Environment Variables Example
# Copy to .env.local for local development (DO NOT COMMIT .env.local)
# ==========================================================

# -------------------------
# Core
# -------------------------
NEXT_PUBLIC_APP_NAME=CD2_OPS
NEXT_PUBLIC_ENV=local
DATABASE_URL=postgresql://USER:PASSWORD@localhost:5432/cd2_ops

# Optional: app URL (for server-side link generation)
APP_BASE_URL=http://localhost:3000

# -------------------------
# Feature Flags (Kill Switches)
# -------------------------
ENABLE_OPENAI=false
ENABLE_CENSUS=false
ENABLE_BLS=false
ENABLE_DISCORD=false
ENABLE_GCAL=false

# -------------------------
# OpenAI
# -------------------------
OPENAI_API_KEY=
OPENAI_MODEL_PRIMARY=gpt-4o-mini
OPENAI_MODEL_FALLBACK=gpt-4o-mini
AI_SUGGESTIONS_REQUIRE_APPROVAL=true

# Optional: rate limiting / safety
OPENAI_MAX_TOKENS=1200
OPENAI_TEMPERATURE=0.3

# -------------------------
# Census API
# -------------------------
CENSUS_API_KEY=
CENSUS_DATASET=acs/acs5
CENSUS_DEFAULT_YEAR=2023

# District and geo defaults (optional)
CENSUS_DEFAULT_STATE_FIPS=05
CENSUS_DEFAULT_DISTRICT=02

# -------------------------
# BLS API
# -------------------------
BLS_API_KEY=
BLS_DEFAULT_SERIES=

# -------------------------
# Discord
# -------------------------
DISCORD_BOT_TOKEN=
DISCORD_WEBHOOK_URL=
DISCORD_DEFAULT_CHANNEL_ID=

# Alert routing: optional override
DISCORD_ALERTS_ENABLED=false

# -------------------------
# Google Calendar (OAuth)
# -------------------------
GCAL_CLIENT_ID=
GCAL_CLIENT_SECRET=
GCAL_REDIRECT_URI=http://localhost:3000/api/integrations/gcal/callback
GCAL_CALENDAR_ID_PRIMARY=primary

# -------------------------
# Security / Auth (placeholder for later)
# -------------------------
# If you add auth later (recommended for real use):
# AUTH_SECRET=
# AUTH_PROVIDER=

# -------------------------
# Observability (optional)
# -------------------------
LOG_LEVEL=info
